<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="fill_vertical|center_horizontal|center"
                android:gravity="center_vertical|fill_vertical|center_horizontal"
                android:text="DRAW"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_brush_black_24dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|center"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:text="Line Cap"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|center"
                android:layout_weight="1"
                android:gravity="center_vertical|fill_vertical|center_horizontal"
                android:text="background"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|center"
                android:layout_weight="1"
                android:gravity="center_vertical|fill_vertical|center_horizontal"
                android:text="TEXT"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.FitWindowsLinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:gravity="left|center_vertical">

                <ImageButton
                    android:id="@+id/draw_line_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_vertical|center_horizontal|center"
                    app:srcCompat="@drawable/ic_timeline_black_24dp" />

                <ImageButton
                    android:id="@+id/draw_circle_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_vertical|center_horizontal|center"
                    app:srcCompat="@drawable/ic_blur_circular_black_24dp" />

                <ImageButton
                    android:id="@+id/draw_rect_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_vertical|center_horizontal|center"
                    app:srcCompat="@drawable/ic_pages_black_24dp" />

                <ImageButton
                    android:id="@+id/draw_oval_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_vertical|center_horizontal|center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleX="1.5"
                    app:srcCompat="@drawable/ic_blur_circular_black_24dp" />

                <ImageButton
                    android:id="@+id/draw_curve_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_vertical|center_horizontal|center"
                    app:srcCompat="@drawable/ic_gesture_black_24dp" />

                <ImageButton
                    android:id="@+id/text_mode_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_vertical|center_horizontal|center"
                    app:srcCompat="@drawable/ic_format_color_text_black_24dp" />

            </android.support.v7.widget.FitWindowsLinearLayout>

            <android.support.v7.widget.FitWindowsLinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:gravity="left|center_vertical">

                <Button
                    android:id="@+id/brush_stroke_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="STROKE"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/brush_fill_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="FILL"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/fill_n_str_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="FILL AND STROKE"
                    android:textSize="5sp" />

                <ImageButton
                    android:id="@+id/brush_width_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_album_black_24dp" />

            </android.support.v7.widget.FitWindowsLinearLayout>

            <android.support.v7.widget.FitWindowsLinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:gravity="left|center_vertical">

                <Button
                    android:id="@+id/cap_butt_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:text="butt"
                    android:textAlignment="center"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/round_cap_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:text="ROUND"
                    android:textAlignment="center"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/sqre_cap_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:text="SQUARE"
                    android:textAlignment="center"
                    android:textSize="10sp" />
            </android.support.v7.widget.FitWindowsLinearLayout>

            <android.support.v7.widget.FitWindowsLinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:gravity="left|center_vertical">

                <ImageButton
                    android:id="@+id/brush_color_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_color_lens_black_24dp" />

                <Button
                    android:id="@+id/bg_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:text="IMAGE"
                    android:textAlignment="center"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bg_opicity_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:text="OPICITY"
                    android:textAlignment="center"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bg_blur_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:text="BLUR"
                    android:textAlignment="center"
                    android:textSize="10sp" />
            </android.support.v7.widget.FitWindowsLinearLayout>

            <android.support.v7.widget.FitWindowsLinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:gravity="left|center_vertical">

                <Button
                    android:id="@+id/text_font_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:text="FONT"
                    android:textAlignment="center"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/font_sz_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:text="SIZE"
                    android:textAlignment="center"
                    android:textSize="10sp" />

            </android.support.v7.widget.FitWindowsLinearLayout>

            <android.support.v7.widget.FitWindowsLinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:gravity="left|center_vertical">

                <ImageButton
                    android:id="@+id/share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_share_black_24dp" />

                <ImageButton
                    android:id="@+id/save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_save_black_24dp" />

                <ImageButton
                    android:id="@+id/forward_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />
            </android.support.v7.widget.FitWindowsLinearLayout>
        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>